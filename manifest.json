{
    "manifest_version": 3,
    "name": "GitHub Commit Bot",
    "version": "1.0",
    "description": "Automate GitHub commits with one click",
    "permissions": ["storage", "identity"],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": ["https://api.github.com/*"],
    "action": {
      "default_popup": "popup.html"
    }
  }
  